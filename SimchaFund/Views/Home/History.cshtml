@model ViewModel

<div class="container">
    <div class="row">
        <h2>History for @Model.NameOfPerson.FirstName, @Model.NameOfPerson.LastName</h2>
    </div>
    <div class="row">
        <h3>Current Balance: @Model.NameOfPerson.Balance</h3>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Action</th>
                <th>Date</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var h in Model.History)
            {
                <tr>
                    <td>@h.Action</td>
                    <td>@h.Date</td>
                    <td>@h.Amount</td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/home/Contributors" class="btn btn-primary btn-lg">Back to Contributers</a>
</div>
